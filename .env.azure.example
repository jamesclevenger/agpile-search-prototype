# Azure Environment Configuration
# Copy this file to .env.local for local development with Azure resources

# Azure Container Registry
ACR_LOGIN_SERVER=your-acr-name.azurecr.io
ACR_USERNAME=your-acr-username
ACR_PASSWORD=your-acr-password

# Azure Database for MySQL
MYSQL_HOST=mysql-unity-catalog-dev.mysql.database.azure.com
MYSQL_PORT=3306
MYSQL_USER=unityadmin
MYSQL_PASSWORD=your-mysql-password
MYSQL_DB=unity_catalog

# Azure Container Instances - Solr
SOLR_HOST=unity-catalog-solr-dev.eastus.azurecontainer.io
SOLR_PORT=8983
SOLR_CORE=unity_catalog

# Databricks Configuration
DATABRICKS_TOKEN=your-databricks-token
DATABRICKS_WORKSPACE_URL=https://your-workspace.cloud.databricks.com

# NextAuth Configuration
NEXTAUTH_URL=https://unity-catalog-web-dev.eastus.azurecontainer.io
NEXTAUTH_SECRET=your-nextauth-secret

# Application Insights (Optional)
APPLICATIONINSIGHTS_CONNECTION_STRING=your-app-insights-connection-string
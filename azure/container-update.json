{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "webImage": {
      "type": "string"
    },
    "batchImage": {
      "type": "string"
    },
    "environment": {
      "type": "string"
    }
  },
  "variables": {
    "resourceGroupName": "[concat('rg-unity-catalog-search-', parameters('environment'))]",
    "acrName": "[concat('acrunitycatalog', parameters('environment'))]"
  },
  "resources": [
    {
      "type": "Microsoft.ContainerInstance/containerGroups",
      "apiVersion": "2021-09-01",
      "name": "[concat('aci-unity-web-', parameters('environment'))]",
      "location": "[resourceGroup().location]",
      "properties": {
        "containers": [
          {
            "name": "web",
            "properties": {
              "image": "[parameters('webImage')]",
              "resources": {
                "requests": {
                  "cpu": 1,
                  "memoryInGb": 2
                }
              },
              "ports": [
                {
                  "port": 3000,
                  "protocol": "TCP"
                }
              ],
              "environmentVariables": [
                {
                  "name": "MYSQL_HOST",
                  "value": "[concat('mysql-unity-catalog-', parameters('environment'), '.mysql.database.azure.com')]"
                },
                {
                  "name": "MYSQL_PORT",
                  "value": "3306"
                },
                {
                  "name": "MYSQL_USER",
                  "value": "unityadmin"
                },
                {
                  "name": "MYSQL_DB",
                  "value": "unity_catalog"
                },
                {
                  "name": "SOLR_HOST",
                  "value": "[concat('unity-catalog-solr-', parameters('environment'), '.eastus.azurecontainer.io')]"
                },
                {
                  "name": "SOLR_PORT",
                  "value": "8983"
                },
                {
                  "name": "SOLR_CORE",
                  "value": "unity_catalog"
                },
                {
                  "name": "NEXTAUTH_URL",
                  "value": "[concat('https://unity-catalog-web-', parameters('environment'), '.eastus.azurecontainer.io')]"
                }
              ]
            }
          }
        ],
        "osType": "Linux",
        "ipAddress": {
          "type": "Public",
          "dnsNameLabel": "[concat('unity-catalog-web-', parameters('environment'))]",
          "ports": [
            {
              "port": 3000,
              "protocol": "TCP"
            }
          ]
        },
        "imageRegistryCredentials": [
          {
            "server": "[concat(variables('acrName'), '.azurecr.io')]",
            "username": "[listCredentials(resourceId('Microsoft.ContainerRegistry/registries', variables('acrName')), '2021-06-01-preview').username]",
            "password": "[listCredentials(resourceId('Microsoft.ContainerRegistry/registries', variables('acrName')), '2021-06-01-preview').passwords[0].value]"
          }
        ]
      }
    },
    {
      "type": "Microsoft.ContainerInstance/containerGroups",
      "apiVersion": "2021-09-01",
      "name": "[concat('aci-unity-batch-', parameters('environment'))]",
      "location": "[resourceGroup().location]",
      "properties": {
        "containers": [
          {
            "name": "batch",
            "properties": {
              "image": "[parameters('batchImage')]",
              "resources": {
                "requests": {
                  "cpu": 0.5,
                  "memoryInGb": 1
                }
              },
              "environmentVariables": [
                {
                  "name": "MYSQL_HOST",
                  "value": "[concat('mysql-unity-catalog-', parameters('environment'), '.mysql.database.azure.com')]"
                },
                {
                  "name": "MYSQL_PORT",
                  "value": "3306"
                },
                {
                  "name": "MYSQL_USER",
                  "value": "unityadmin"
                },
                {
                  "name": "MYSQL_DB",
                  "value": "unity_catalog"
                },
                {
                  "name": "SOLR_HOST",
                  "value": "[concat('unity-catalog-solr-', parameters('environment'), '.eastus.azurecontainer.io')]"
                },
                {
                  "name": "SOLR_PORT",
                  "value": "8983"
                },
                {
                  "name": "SOLR_CORE",
                  "value": "unity_catalog"
                }
              ]
            }
          }
        ],
        "osType": "Linux",
        "restartPolicy": "OnFailure",
        "imageRegistryCredentials": [
          {
            "server": "[concat(variables('acrName'), '.azurecr.io')]",
            "username": "[listCredentials(resourceId('Microsoft.ContainerRegistry/registries', variables('acrName')), '2021-06-01-preview').username]",
            "password": "[listCredentials(resourceId('Microsoft.ContainerRegistry/registries', variables('acrName')), '2021-06-01-preview').passwords[0].value]"
          }
        ]
      }
    }
  ]
}